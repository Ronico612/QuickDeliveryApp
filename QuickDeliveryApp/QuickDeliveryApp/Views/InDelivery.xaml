<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickDeliveryApp.Views.InDelivery">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ההזמנה אושרה בהצלחה! וממתינה לאישור השליח" IsVisible="{Binding IsWaiting}"/>
            <Label Text="ההזמנה אושרה על ידי השליח וכבר בדרך אליך!" IsVisible="{Binding IsApproved}"/>
            <Label Text="ההזמנה נאספה מהחנות ובדרך אליך!" IsVisible="{Binding IsTakenFromShop}"/>
            <Label Text="ההזמנה נמסרה לך! אנו מודים לך על הזמנתך" IsVisible="{Binding IsBrought}"/>

            <Label Text="*ניתן לצפות בדף מעקב אחר הזמנה דרך אזור אישי -> הזמנות בתהליך -> למעקב אחר ההזמנה"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>