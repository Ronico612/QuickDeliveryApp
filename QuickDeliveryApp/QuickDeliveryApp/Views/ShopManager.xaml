<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickDeliveryApp.Views.ShopManager">
    <ContentPage.Content>
        <StackLayout>
            <Label HorizontalOptions="CenterAndExpand" Text="מנהל חנות" Style="{StaticResource labelStyle4}" Padding="20,20,20,0"/>
            <Label HorizontalOptions="CenterAndExpand" Text="{Binding ShopName}" Style="{StaticResource labelStyle2}"/>
            <Label HorizontalOptions="CenterAndExpand" Text="{Binding ShopCity}" Style="{StaticResource labelStyle2}" Margin="0,0,0,20"/>
            <Button Text="ניהול מוצרים" Command="{Binding ShopProductsManagementCommand}" Style="{StaticResource arrowButtonStyle}"/>
            <Button Text="צפייה בהזמנות" Command="{Binding ShopOrdersCommand}" Style="{StaticResource arrowButtonStyle}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>