<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickDeliveryApp.Views.DeliveryPerson">
    <ContentPage.Content>
        <StackLayout>
            <Label HorizontalOptions="CenterAndExpand" Text="שליח" Style="{StaticResource labelStyleExtraLarge}"/>
            <Button Text="בחר הזמנה למשלוח" Command="{Binding ChooseOrderCommand}" Style="{StaticResource arrowButtonStyle}"/>
            <Button Text="משלוחים בתהליך" Command="{Binding OrdersInProcessCommand}" Style="{StaticResource arrowButtonStyle}"/>
            <Button Text="צפייה בכל המשלוחים שבוצעו" Command="{Binding HistoryDeliverysCommand}" Style="{StaticResource arrowButtonStyle}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>