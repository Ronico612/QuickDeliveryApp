<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickDeliveryApp.Views.ProductSelected">
    <ContentPage.Content>
        <StackLayout>
            <Label HorizontalOptions="Center" Text="{Binding CurrentProduct.ProductName}"></Label>
            <Image Source="{Binding CurrentProduct.ImgSource}"/>
            <Label HorizontalOptions="Center" Text="{Binding CurrentProduct.ProductPrice}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>