<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickDeliveryApp.Views.ProductSelected">
    <ContentPage.Content>
        <ScrollView>
    <StackLayout>
        <Label HorizontalOptions="Center" Text="{Binding CurrentProduct.ProductName}"></Label>
        <Image HeightRequest="400" Source="{Binding CurrentProduct.ImgSource}"/>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Label Text="₪"/>
                    <Label Text="{Binding CurrentProduct.ProductPrice}"/>
                </StackLayout>
                <Label HorizontalOptions="Center" Text="הפריט אזל מהמלאי" IsVisible="{Binding ErrorProductText}" TextColor="Red"></Label>
        <Button Text="{Binding IsAddedText}" IsEnabled="{Binding IsEnabledButtonAddProduct}" Command="{Binding AddToShoppingCartCommand}" BackgroundColor="LightPink" ImageSource="{Binding IconSource}"/>
        <Button Text="מעבר לסל הקניות" Command="{Binding GoToShoppingCartCommand}" IsVisible="{Binding IsGoToShoppingCart}" BackgroundColor="Gray" ImageSource="ShoppingBag.png"/>
    </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>