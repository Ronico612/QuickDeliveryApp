<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickDeliveryApp.Views.ServerStatus">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            
            <Label Text="{Binding ServerStatus}"
                   FontSize="20"
                   FontAttributes="Bold"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand" Margin="0,50,0,0"/>
            <Image Source="Logo2.jpg" IsVisible="{Binding IsShowLogo, FallbackValue=False}" Margin="0,0,0,150"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>