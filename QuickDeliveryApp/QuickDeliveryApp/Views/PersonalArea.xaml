<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickDeliveryApp.Views.PersonalArea">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Margin="0,20,0,20" Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Label Text="!" FontAttributes="Bold" FontSize="20"></Label>
                <Label Text="{Binding App.CurrentUser.UserFname}" FontAttributes="Bold" FontSize="20"/>
                <Label Text="שלום" FontAttributes="Bold" FontSize="20"></Label>
            </StackLayout>
            <Button Text="חשבון" Command="{Binding UpdateUserDetailsCommand}" FontAttributes="Bold" BackgroundColor="White" ImageSource="LeftArrow.png"></Button>
            <Button Text="הזמנות בתהליך" Command="{Binding CurrentOrdersCommand}" FontAttributes="Bold" BackgroundColor="White" ImageSource="LeftArrow.png"></Button>
            <Button Text="היסטוריית הזמנות" Command="{Binding HistoryOrdersCommand}" FontAttributes="Bold" BackgroundColor="White" ImageSource="LeftArrow.png"></Button>
            <Button Text="התנתקות" CornerRadius="8" Margin="10,40,10,0" FontAttributes="Bold" TextColor="Red" BackgroundColor="#FCEDF3" Command="{Binding LogoutCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>