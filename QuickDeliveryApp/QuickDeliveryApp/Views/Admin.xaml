<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickDeliveryApp.Views.Admin">
    <ContentPage.Content>
        <StackLayout>

            <Label HorizontalOptions="CenterAndExpand" FontSize="30" Text="מנהל אתר"></Label>
            <Button Text="ניהול חנויות ומנהלים" Command="{Binding AdminShopsManagementCommand}" FontAttributes="Bold" BackgroundColor="White" ImageSource="LeftArrow.png"></Button>
            <Button Text="ניהול שליחים" Command="{Binding AdminDeliveryPManagementCommand}" FontAttributes="Bold" BackgroundColor="White" ImageSource="LeftArrow.png"></Button>
            <Button Text="צפייה במשתמשים" Command="{Binding AdminShowUsersCommand}" FontAttributes="Bold" BackgroundColor="White" ImageSource="LeftArrow.png"></Button>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>