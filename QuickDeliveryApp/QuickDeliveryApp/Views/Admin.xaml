<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickDeliveryApp.Views.Admin">
    <ContentPage.Content>
        <StackLayout>
            <Label HorizontalOptions="CenterAndExpand" Text="מנהל אתר" Style="{StaticResource labelStyle4}"/>
            <Button Text="ניהול חנויות ומנהלים" Command="{Binding AdminShopsManagementCommand}" Style="{StaticResource arrowButtonStyle}"/>
            <Button Text="ניהול שליחים" Command="{Binding AdminDeliveryPManagementCommand}" Style="{StaticResource arrowButtonStyle}"/>
            <Button Text="צפייה במשתמשים" Command="{Binding AdminShowUsersCommand}" Style="{StaticResource arrowButtonStyle}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>